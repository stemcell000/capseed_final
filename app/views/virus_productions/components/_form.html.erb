<%= simple_form_for @vp, html: { class: 'form-vertical' }, :remote => true  do |f| %>
	<%= f.error_notification %>
	<small>
	<%= f.input :id, :as => :hidden %>
		
			<%= f.input :id, :as => :hidden %>
			
			<div class="row">
				<div class="col-lg-4">
							<%= f.input :name, :label => "Name:" %>
				</div>
				<div class = "col-lg-2">
						<%=f.input :date_of_production, :label => "Date", :as => :string, :input_html => { :value => (f.object.date_of_production.strftime("%B %e, %Y") if f.object.date_of_production), "data-behaviour" => "datepicker" } %>
				</div>
				<div class="col-lg-2">
					<%=f.input :invoice , :label => "Invoice"%>
				</div>
			</div>
			
			<div class="row">
				<div class="col-lg-5">
								<%= f.association :user, :label => "Contact name",
												:collection => User.all, :label_method => :full_name, :value_method => :id,
												:input_html => { class:"select2-select" } %>
									</div>
			</div>
			
			<div class="row">
				<div class="col-lg-4">
					<%= f.input :vol, :label => "Volume" %>
				</div>
				<div class="col-lg-4">
					<%= f.association :vol_unit, :label => "Volume unit",
												:collection => VolUnit.all,:value_method => :id,
												:input_html => { class:"select2-select" },
												:selected => 1 %>
				</div>
			</div>
			
			<div class="row">
				<div class="col-lg-4">
					<%= f.input :plate_nb, :label => "Number of plates" %>
				</div>
				<div class="col-lg-6">
					<%= f.input :plate_id, :label => "Plate IDs" %>
				</div>
			</div>	
			
			<div class="row">
				<div class="col-lg-4">
					<%= f.input :sterility, :label => "Sterility"%>
				</div>	
				<div class="col-lg-2">
					<%= f.input :l2, :label => "L2" %>
				</div>
			</div>
			
			<div class= "row">
				<div class="col-lg-6">
					<%=f.input :titer , :label => "Titer (vg/ml)", as: :string, :input_html => {:value => "%.3e" % f.object.titer } %>
				</div>
				<div class="col-lg-6">
					<%=f.input :titer_atcc , :label => "Titer ATCC (vg/mL)", as: :string, :input_html => {:value => "%.3e" % f.object.titer_atcc }%>
				</div>
			</div>
			
			<div class="row">
				<div class="col-lg-4">
					<%=f.input :gel_prot , :label => "Gel (proteins)"%>
				</div>
				<div class="col-lg-4">
					<%=f.input :hek_result , :label => "HEK (results)"%>
				</div>
				<div class="col-lg-4">
					<%=f.input :batch_end , :label => "Batch end"%>
				</div>
			</div>
			
			<div class="row">
				<div class="col-lg-12">
					<%=f.input :comment , :label => "Comment"%>
				</div>
			</div>
			
			
			<div class="btn-group" role="group" aria-label="...">
		    		<%= f.submit("Save", :class => "btn btn-default") %>
		        	<%= f.submit 'Cancel', :type => :reset, :class => "btn btn-default", "data-dismiss" => "modal", "aria-hidden" => "true" %>
		    </div>
	</small>
<%end%>
