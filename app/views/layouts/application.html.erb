<!DOCTYPE html>
<html>
  <head>
    <title><%= full_title(yield(:title)) %></title>
 	<%= stylesheet_link_tag 'application', media: 'all','data-turbolinks-track' => true %>
    <%= javascript_include_tag 'application', 'data-turbolinks-track' => true %>
    <%= csrf_meta_tags %>
    <%= render 'layouts/shim' %>
  </head>
  <body>
  	<%= include_gon(:watch => true) %>
  	<%= Gon::Base.render_data({}) %>
  	<%= render 'layouts/header' %>
  	<%= render :partial => 'components/modal_alt' %>
  	<%= render :partial => 'components/modal' %>
  	<%= render :partial => 'components/modal_pb' %>
    <div class="container">
    	<div id='flash-msg-container'>
			<%= render partial: "components/flash_messages", :flash => flash %>
		</div>
			 	<button type="button" class="navbar-toggle" data-toggle="collapse" data-target=".navbar-collapse">
		        <span class="sr-only">Toggle navigation</span>
		        <span class="icon-bar"></span>
		        <span class="icon-bar"></span>
		        <span class="icon-bar"></span>
		    </button>
	<nav class="navbar-default" role="navigation">
    <div class="collapse navbar-collapse">
		<% if params[:controller] == "assays" || params[:controller] == "clones"%>
				<%= render :partial => 'components/dynamic_menu' %>
				<% provide(:title, "Cloning Manager") %>
		<%elsif params[:controller] == "productions" %>
				<%= render :partial => 'components/dynamic_menu_prod' %>
				<% provide(:title, "Production Manager") %>
		<%end%>
	</nav>
		<div class="jumbotron container-fluid <%= jumboclass(yield(:title)) %>" >
	      <%= yield %>
	 	</div>
 	</body>
 	<div>
 		<div class="col-lg-12">
      		<%= render 'layouts/footer' %>
      	</div>
    </div>
</html>
