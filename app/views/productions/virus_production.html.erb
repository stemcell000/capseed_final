<%= render 'components/prod_process_pills'%>
	<div class="panel panel-info">
		<div class="panel-heading"> Production: <%= @production.id %> <mark><strong>is locked</strong></mark> (ask your administrator to unlock.)</div>
		<%= content_tag "div", id: "production_data_id", data:{production_data_id: @production.id.to_i} do %><%end%>
		
		<div class="panel-body">
		<div class="row">
			<div class="col-lg-12"><h4>Plasmids</h4></div>
		</div>
		<div class="row">
				<div  id="cb-container" class="col-lg-12">
							<%= render :partial => "productions/components/table_lock" , :locals => { :collection => @clone_batches }%>
				</div>
		</div>
		<div class="row">
			<div class="col-lg-12"><h4>Virus</h4></div>
		</div>
		<div class="row">
				<div id="vp-container" class="col-lg-12">
							<%= render :partial => "productions/components/table_vp" , :locals => { :collection => @vps }%>
				</div>
		</div>
				
				<div class="row">
					<div class="col-lg-12">
						<%= link_to 'Add virus', spawn_vp_new_production_path(:production_id =>@production.id), :class => "btn btn-success btn-sm  pull-right", :remote => true %>
					</div>
				</div>
		</div>
		
		<div class="panel-footer">
		    <div class="btn-group" role="group" aria-label="...">
				<%= link_to 'Previous', add_plasmid_production_path, :class => "btn btn-default btn-sm" %>
				<%= link_to 'Close', close_production_path, :class => "btn btn-default btn-sm" %>
		  	</div>
	  	</div>
</div>
