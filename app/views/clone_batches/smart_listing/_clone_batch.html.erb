  <td class="center"><%= object.name %></td>
  <td class="center"><%= object.genes.collect{|gene| gene.name}.to_sentence%></td>
  <td class="center"><%= object.promoters.collect{|promoter| promoter.name}.to_sentence%></td>
  <td class="center"><% if object.clone_id.to_i>0 %>
  						<%= object.clone.name %>
  						<%else%>
  							-
  						<%end%>
  						</td>
  <td class="center"><%= object.plasmid_batches.length %></td>
  <td class="center"><%= object.created_at.strftime("%B %e, %Y") %></td>
<td class="actions">
		 
	<a tabindex="0" data-toggle="popover" data-trigger="focus" data-placement="left"
			title='
				<div class="row"> 
					<div class="col-sm-4 text-left">
						<%=object.name%>
					</div>
				</div>'
			data-content='
				<div class="col-sm-12 text-left">
					<strong>Created on: </strong><%= object.created_at.strftime("%h %e, %Y ") %><br />
					<% if !object.comment.blank? %>
						<strong>Comments: </strong><br /><%=object.comment%><br />
					<%end%>
					<% if object.clone_batch_as_plasmid_attachments.length>0 %>
						<strong>Attached files: </strong><br />
							<% object.clone_batch_as_plasmid_attachments.each do |a|%>
								<%= link_to File.basename(a.attachment.to_s), a.attachment.to_s %><br />
							<%end%>
					<%end%>
				</div>
			</small>
			'
		>
			<span class="fa_icon fa fa-eye"></span>
	</a>
	  <%= smart_listing_item_actions [
	  	{name: :edit,    url: edit_from_inventory_clone_batch_path(object)},
	  	{ name:   :custom, 
			url:  destroy_from_inventory_clone_batch_path(object),
			method: :delete, 
			icon: "fa_icon fa fa-trash-o",
			remote: true, 
			title:  "Destroy",
			data: {confirm: "Are you sure?"}
		}]
  		%>
</td>