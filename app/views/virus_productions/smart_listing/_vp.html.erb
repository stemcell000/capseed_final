  <td class="center"><%= object.id %></td>
  <td class="center"><%= object.name %></td>
  <td class="center"><%= object.created_at.strftime("%B %e, %Y") %></td>
  <td class="center"><%= object.production.nil? ? "No data" : object.production.id %></td>
  <td class="center"><%= object.date_of_production.nil? ? "No data" : object.date_of_production.strftime("%B %e, %Y") %></td>
  <td class="center"><small><%= cb_display(object.clone_batches) %></small></td> 
  
  <td class="actions">
  	
	  <a tabindex="0" data-toggle="popover" data-trigger="focus" data-placement="left"
			title='
				<div class="row"> 
					<div class="col-lg-12 text-left primary">
						<strong>Name: <%=object.name%></strong><br />
						<strong>Created on: <%=object.created_at%></strong>
					</div>
				</div>'
				data-content='	
								<strong>Date of prod.: </strong> <%= object.date_of_production.nil? ? "none" : object.date_of_production.strftime("%B %e, %Y") %><br />
								<strong>Volume: </strong> <%= object.vol.nil? ? "none" : "#{object.vol} #{object.vol_unit.name}" %><br />
								<strong>number of plates: </strong> <%= object.plate_nb.nil? ? "none" : object.plate_nb %><br />
								<strong>Titer: </strong> <%= object.titer.nil? ? "none" : "%.3e" %object.titer+"vg/ml" %><br />
								<strong>Titer ATCC: </strong> <%= object.titer_atcc.nil? ? "none" : "%.3e" %object.titer_atcc+"vg/ml" %><br />
								<strong>Titer to ATCC: </strong> <%= object.titer_to_atcc.nil? ? "none" : "%.3e" %object.titer_to_atcc+"vg/ml" %><br />
								<strong>Gel (Prot.): </strong> <%= object.gel_prot.nil? ? "none" : object.gel_prot %><br />
								<strong>Sterility: </strong> <%= object.sterility.nil? ? "none" : object.sterility %><br />
								<strong>L2: </strong> <%= object.l2.nil? ? "none" : object.l2 %><br />
								<strong>User: </strong><%= object.user.nil? ? "none" : object.user.full_name %><br />
								<strong>Batch end: </strong> <%= object.batch_end.nil? ? "none" : object.batch_end %><br />
								<% if !object.hek_result.blank? %>
									<strong>HEK results: </strong><%= object.hek_result %><br />
								<%end%>
								<% if !object.comment.blank? %>
									<strong>Comment: </strong><%= object.comment %><br />
								<%end%>
			'
		>
			<span class="fa_icon fa fa-eye"></span>
	</a>
	  <%= smart_listing_item_actions [
	  	{name: :edit,    url: edit_from_inventory_virus_production_path(object),
	  		title: "Edit"},
		{name: :destroy,
			url: virus_production_path(object),
			title: "Destroy",
			confirmation: "Are you sure you want to delete this?"}
  		]%>
  		<%if object.production_id?%>
	  		<%= smart_listing_item_actions [
	  			{name: :custom,    url: edit_production_path(object.production_id),
		  		method: :get, 
	  			icon: "fa fa-industry", 
	  			title: "View production"}]
	  		%>
  		<%end%>
</td>