<%= simple_nested_form_for ([@assay, @clone, @clone_batch, @clone_batch_qc]), remote: true, html: {class: 'horizontal-form'} do |f|  %>
<%= f.error_notification message: 'You must select a status for Sequencing and PCR colony.' %>
<ul class="errors"></ul>
<small>
<div class="panel panel-default">
	<div class="panel-body">
		<div class="container">	
        			
					<div class="row" id = "sequencing">
						
						<div class="col-lg-7">
							<div class="row">
						  		<div class="col-md-3">
									<%=f.association :sequencing, :label => "Sequencing", :collection => Sequencing.all, input_html: { class: 'select2-select'}, :include_blank => true %>
								</div>
							</div>
							<div class="row">
								<div class="col-lg-12">
									<%= f.input :id, :label => "id:", :as =>:hidden %>
									<%= f.association :primer, :label => "Primer",
										:collection => @primers_all, :label_method => lambda { |primer| "#{primer.number} | #{primer.name}"}, :value_method => :id,
										:input_html => { class:"select2-select" } %>
								</div>
							</div>
							<div class="row">
								<div class="col-lg-3">
									 <%= f.input :date_send, :label => "Sending date:", :as => :string, :input_html => { :value => (f.object.date_send.strftime("%B %e, %Y") if f.object.date_send), "data-behaviour" => "datepicker" } %>
								</div>
								<div class="col-lg-3">
									  <%= f.input :date_rec, :label => "Date of reciept:", :as => :string, :input_html => { :value => (f.object.date_send.strftime("%B %e, %Y") if f.object.date_send), "data-behaviour" => "datepicker" } %>
								</div>
							<div class="col-lg-6">
								   <%= f.association :user, :label => "Contact name",
										:collection => @users, :label_method => :full_name, :value_method => :id,
										:input_html => { class:"select2-select" } %>
							</div>
						</div>
					
					<div class="row">   
						<div class="col-lg-12">
							   <%= f.input :result, :label => "Notes:" %>
						</div>
					</div>
				
				</div>
			</div>
			
			
				<div class="row" id = "pcr-colony">
					
					<div class="col-lg-7">
					
						<div class="row">
					  		<div class="col-md-3">
								<%=f.association :pcr_colony, :label => "PCR colony", :collection => PcrColony.all, input_html: { class: 'select2-select'}, :include_blank => true %>
							</div>
			
				  				<div class="col-md-2 alt-container">
									<%= f.input :primer1, :label => "Primer F: "%>
				  				</div>
				  				
					  			<div class="col-md-2 alt-container">
										<%= f.input :primer2, :label => "Primer R: "%>
					  			</div>
					  			 	
							 <div class="col-md-3 alt-container">
								 <%= f.input :date_send2, :label => "Date:", :as => :string, :input_html => { :value => (f.object.date_send.strftime("%B %e, %Y") if f.object.date_send), "data-behaviour" => "datepicker" } %>
							</div>
						</div>
					</div>
				</div>
					<div class="row" id = "files-port">
						<div class="col-lg-12">
						   <strong>File</strong><br />
						     	<%= f.simple_fields_for :clone_batch_qc_attachments do |a| %>	
								<%= link_to File.basename(a.object.attachment.to_s), a.object.attachment.to_s%>
							    <%= a.input_field :attachment, :as => :file, :title => "Search for a file to add" %> 
							    <%= a.link_to_remove "remove", :class => "btn btn-xs btn-danger"%>
								<% end %>
						</div>
					</div>
						
					<div class="row">
							<div class="col-lg-2">
								<%= f.link_to_add "Add a file", :clone_batch_qc_attachments ,:class => 'btn btn-sm btn-success' %>
							</div>
					</div>
				     
			  		
			  		
			  		
		 </div>
		</small>
		</div>
	</nav>	
	
	</div>
	<div class="panel-footer">
		 		<div class="btn-group" role="group" aria-label="...">
		    		<%= f.submit("Save", :class => "btn btn-default", :title => "Save the changes to this clone.", :remote => true) %>
		        	<%= f.submit 'Cancel', :type => :reset, :class => "btn btn-default", "data-dismiss" => "modal", "aria-hidden" => "true" %>
		        </div>
	</div>
        
     </div>
<%end%>




