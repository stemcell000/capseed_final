<% provide(:title, "Plasmid : Search") %>

<%= search_form_for @q, :url =>clone_batches_path, :class=>"form-horizontal", :remote => true do |f| %>
	<small>	
		<div class="row">
			<div class="col-lg-12">
				<h3><i class="fa_icon fa fa-search"></i> Plasmid Inventory</h3>
			</div>
		</div>
		<div class="row">
			<div class="col-lg-12">
				<%= f.search_field :number_or_name_or_temp_name_or_comment_or_origin_as_plasmid_or_comment_as_plasmid_or_productions_id_or_productions_name_or_type_name_or_strand_name_or_genes_name_or_promoters_name_cont, class: "col-lg-12 col-md-12 col-sm-12", placeholder: "Search any term"%>
			</div>
		</div>
		<div id="toggle_button">
				<%if current_user.toggle_switch%>
					<%= link_to "Show more fields","user_display_search_fields_path", :class =>"btn btn-default btn-md font80pc", :title=>"Remove clone from list.", :remote => true %>
				<%else%>
					<%= link_to "Hide","user_display_search_fields_path", :class =>"btn btn-default btn-md font80pc", :title=>"Remove clone from list.", :remote => true %>
				<%end%>	
		</div>
		
		<div class="row">
			
			<div class="col-lg-6">
					<h5 class="text-primary"><em>Basic input search : </em></h5>
			</div>	
			<div class="col-lg-6">
					<h5 class="text-primary"><em>Search by ranges of date of creation : </em></h5>
			</div>
		</div>
		<div class="row">
			<div class="col-lg-6">
						<%= f.label "Number*" %>
						<%= f.search_field :number_cont, :class=>"col-lg-12" %>
			</div>
			<div class="col-lg-6">
						<%= f.label "Start date " %>
						<%= f.search_field :created_at_gteq, value: @created_at_date_gteq_with_proper_format, 'data-behaviour' => 'datepicker'%>
			</div>
		</div>
		<div class="row">
			<div class="col-lg-6">	
					<%= f.label "Name*" %>
					<%= f.search_field :name_cont, :class=>"col-lg-12" %>
			</div>
			<div class="col-lg-6">
					<%= f.label "End date " %>
					<%= f.search_field :created_at_lteq, value: @created_at_date_lteq_with_proper_format, 'data-behaviour' => 'datepicker'%>
			</div>
		</div>
		<div class="row">
			<div class="col-lg-6">
					<%= f.label "Clone name*"%>
				  	<%= f.search_field :clone_name_cont, :class=>"col-lg-12" %>
			</div>
			<div class="col-lg-6">
					<%= f.label "Batch name*" %>
				  	<%= f.search_field :plasmid_batches_name_cont, :class=>"col-lg-12" %>
			</div>
		</div>
		<div class="row">
			<div class="col-lg-6">
					<%= f.label "Gene*" %>
				  	<%= f.search_field :genes_name_cont, :class=>"col-lg-12" %>	
			</div>
			<div class="col-lg-6">
					<h5 class="text-primary"><em>Others : </em></h5>	
			</div>
		</div>
		<div class="row">
			<div class="col-lg-6">
					<%= f.label "Promoter*"%>
				  	<%= f.search_field :promoters_name_cont, :class=>"col-lg-12" %>
			</div>
			<div class="col-lg-6">
					<%= f.label "Glycerol stock box#*"%>
				  	<%= f.search_field :glyc_stock_box_as_plasmid_cont, :class=>"col-lg-12" %>
			</div>
		</div>
		<div class="row">
			<div class="col-lg-6">
					<%= f.label "Type" %>
					<%= f.select(:type_id_eq, @types_all,{:include_blank => " "}, {:class => "select2-select col-lg-12"}) %>
			</div>
			<div class="col-lg-6">
			 		<%= f.label "Format*" %>
				  	<%= f.search_field :plasmid_batches_format_cont, :class=>"col-lg-12" %>
			</div>
		</div>
		<div class="row">
			<div class="col-lg-6">
				<%= f.label "Target" %>
				<%= f.select(:target_id_eq, @targets_all,{:include_blank => " "}, {:class => "select2-select col-lg-12"}) %>
			</div>
			<div class="col-lg-6">
		 			<%= f.label "Comment*" %>
				  	<%= f.search_field :comment_as_plasmid_cont, :class=>"col-lg-12" %>
			</div>	
		</div>
		<div class="row">
			<div class="col-lg-6">
		 			<span class="help-block"><em>*Enter all or part of the value.</em></span>
		 	</div>

		</div>

		<div class="row">	
				<div class="form-group pull-right">
					<%= f.submit class:"cancel-button btn btn-default" %>
					<%= link_to "Clear Search", clone_batches_path, class:"cancel-button btn btn-default" %>
			</div>
		</div>
		</small>
		<% end %>
		
		<div id="container" class="row">
			<%= smart_listing_render :clone_batches %>
		</div>
