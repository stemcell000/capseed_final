<td colspan="7">
	<h4>Edit Virus</h4>
<%= simple_nested_form_for @vp, url: update_from_inventory_virus_production_path, html: { class: 'form-vertical' }, :remote => true  do |f| %>
	<%= f.error_notification %>
	<small>
		
			<%= f.input :id, :as => :hidden %>
			<div class="row">
				<div class="col-lg-4">
							<%= f.input :name, :label => "Name:" %>
				</div>
				<div class="col-lg-1">
					<%=f.input :invoice , :label => "Invoice"%>
				</div>
				<div class = "col-lg-2">
						<%=f.input :date_of_production, :label => "Date", :as => :string, :input_html => { :value => (f.object.date_of_production.strftime("%B %e, %Y") if f.object.date_of_production), "data-behaviour" => "datepicker" } %>
				</div>
			</div>
			
			<div class="row">
				<div class="col-lg-3">
								<%= f.association :user, :label => "Contact name",
												:collection => User.all, :label_method => :full_name, :value_method => :id,
												:input_html => { class:"select2-select" } %>
									</div>
				<div class="col-lg-2">
					<%= f.input :vol, :label => "Volume" %>
				</div>
				<div class="col-lg-2">
					<%= f.association :vol_unit, :label => "Volume unit",
												:collection => VolUnit.all,:value_method => :id,
												:input_html => { class:"select2-select" },
												:selected => 1 %>
				</div>
			</div>
			
			<div class="row">
				<div class="col-lg-2">
					<%= f.input :plate_nb, :label => "Number of plates" %>
				</div>
				<div class="col-lg-4">
					<%= f.input :plate_id, :label => "Plate IDs" %>
				</div>
				<div class="col-lg-2">
					<%= f.input :sterility, :label => "Sterility"%>
				</div>	
				<div class="col-lg-2">
					<%= f.input :l2, :label => "L2" %>
				</div>
			</div>
			
			
			<div class="row">
				<div class="col-lg-2">
					<%=f.input :gel_prot , :label => "Gel (proteins)"%>
				</div>
				<div class="col-lg-4">
					<%=f.input :hek_result , :label => "HEK (results)"%>
				</div>
				<div class="col-lg-2">
					<%=f.input :batch_end , :label => "Batch end"%>
				</div>
			</div>
			
			<div class="row">
				<div class="col-lg-6">
					<%=f.input :comment , :label => "Comment"%>
				</div>
				<div class="col-lg-6">
					<div class="row">
						<div class="col-lg-12">
							<strong>Associated plasmids :</strong><br />
						</div>	
					</div>
					<div class="row">
						<div class="col-lg-12">
							<%= f.object.clone_batches.empty? ? "No plasmid" : f.object.clone_batches.map { |cb| cb.name }.to_sentence %>
						</div>
					</div>
					
				</div>
			</div>
			
<%=f.simple_fields_for :dosages do |ff|%>
				<div id="titer_container" class="col-lg-12">
					<div class="row">
							<div class="form-group ui-front well">
							<div class="row">
								<%= ff.input :id, :as => :hidden %>
								<div class ="col-lg-3">
								<% if ff.object.titer.nil? %>
									<%= ff.input :titer, :label => "Titer (vg/mL)", as: :string %>
									<div class="help-block">Example of titer: 4e13</div>
								<%else%>
									<%= ff.input :titer, :label => "Titer (vg/mL)", as: :string, :input_html => { :value => "%.2e" %ff.object.titer } %>
								<%end%>
								</div>
								<div class ="col-lg-4">
								<% if ff.object.titer_atcc.nil? %>
									<%= ff.input :titer_atcc , :label => "Titer ATCC (vg/mL)", as: :string %>
									<div class="help-block">Example of titer: 4e13</div>
								<%else%>
									<%= ff.input :titer, :label => "Titer ATCC (vg/mL)", as: :string, :input_html => { :value => "%.2e" %ff.object.titer_atcc } %>
								<%end%>
								</div>
								<div class ="col-lg-4">
								<% if !ff.object.id.nil? %>
									<%= ff.input :titer, :label => "Titer ATCC (vg/mL)", as: :string, :input_html => { :value => "%.2e" %ff.object.titer_to_atcc }, :readonly => true %>
								<%end%>
								</div>
								</div>
								<div class="row">
									<div class="col-lg-5">
										<%= ff.input :id, :as => :hidden %>
										<%= ff.association :user, :label => "Contact name",
										:collection => @users, :label_method => :full_name, :value_method => :id,
										:input_html => { class:"select2-select" } %>
									</div>
									<div class="col-lg-3">
										<%= ff.input :date, :label => "Date", :as => :string, :input_html => { :value => (ff.object.date.strftime("%B %e, %Y") if ff.object.date), "data-behaviour" => "datepicker" } %>
									</div>
							</div>
							<%= ff.link_to_remove "Remove titer" %>
						</div>
							
				<%end%>
							<div class="row">	
								<div class="col-lg-12">
									<%= f.link_to_add "Add titers", :dosages, :class => "btn btn-info btn-sm" %>
								</div>
							</div>
				</div>
			
			
		<div class="btn-group row" role="group" aria-label="...">
			<div class="col-lg-12">
				<%= f.submit "Save", :class => "btn btn-primary" %>
	        	<%= link_to "Cancel", :back, :class => "btn btn-default", :remote => true %>
	        </div>
		</div>
	</small>
<%end%>
</td>
