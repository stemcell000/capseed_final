<div class="panel-body">
		<%= simple_form_for @production, html: { class: 'form-vertical' } do |f| %>
			<%= f.error_notification %>
					<%= f.input :id, :as => :hidden %>
				
				<div class="row">
					<div class="col-lg-3">
						<%= f.input :name, :disabled => @production.locked %>
					</div>
				</div>
				<div class="row">
					<div class="col-lg-12">
						<%= f.association :clone_batches, :include_blank => false, :label => "Add plasmid", :collection => CloneBatch.all.where.not(:name => "").where.not(:type_id => nil), input_html: { class: 'select2-select' },
						label_method: lambda { |clone_batch| "#{clone_batch.id} | #{clone_batch.name} | #{clone_batch.type.name}".html_safe },
						:disabled => f.object.last_step >=2 %>
					</div>
				</div>
				<div class="row">
					<div class="col-lg-12">
			        	<%= f.input :comment, :disabled => @production.locked %>
		        	</div>
		       	</div>
		       	<div class="row">
				       <% if params[:action] == 'edit' %>
				       <div class="col-lg-12">
				       		<%= f.input :order_date, :label => "Date of order:", :disabled => @production.locked, :as => :string, :input_html => { :value => (f.object.order_date.strftime("%B %e, %Y") if f.object.order_date), "data-behaviour" => "datepicker" } %>
							<%= f.association :projects, :label => "Projects",
							:collection => Project.all.order(:name),
							:input_html => { class:"select2-select" },
							:disabled => @production.locked %>
						</div>
					<% else %>
						<div class="col-lg-12">
							<%= f.input :order_date, :label => "Date of order:", :disabled => @production.locked, :as => :string, :input_html => { :value => (f.object.order_date.strftime("%B %e, %Y") if f.object.order_date), "data-behaviour" => "datepicker" } %>
							<%= f.association :projects, :label => "Projects",
							:collection => Project.all.order(:name),
							:selected => 1,
							:input_html => { class:"select2-select" },
							:disabled => @production.locked %>
						</div>
					<% end %> 
				</div>
	 			<div class="btn-group" role="group" aria-label="...">
	      		     	<%= link_to "Cancel", @productions, class: "btn btn-default", :title => "Cancel the changes." %>
	  		        	<%= f.submit("Next", class: "btn btn-default", title: "Save the changes.") %>
	  		    </div>
	  	
			<% end %>
			</div>
	</div>