 <%= search_form_for @q, :url => display_all_productions_path, :class => "form-inline" ,:remote => true do |f| %>

<div class="row">
 	
  	<%= f.label :name_or_comment_cont %>
  	<%= f.search_field :name_or_comment_cont %>
	  	<%=  f.label 'Create between: ' %>
	  	<%= f.search_field :created_at_gteq, class:"datepicker form-control", 'datepicker' => true, id: "start_date" %>
	  	<%= f.label ' and '%>
	  	<%= f.search_field :created_at_lteq, class:"datepicker form-control", 'datepicker' => true, id: "end_date" %>
</div>

<div class="row">
	<div class="col-lg-4">
		<%= f.label 'Step' %>
		<%= f.select(:step_eq, @steps, {:include_blank => " "}, {:class => "select2-select project"}) %>
	</div>
		<div class="col-lg-4">
		<%= f.label 'Project'%>
		<%= f.select(:projects_id_eq, @projects_all,{:include_blank => " "}, {:class => "select2-select project"}) %>
	</div>
</div>

<div class="row">
  <%= f.submit class:"btn btn-default" %>
  <%= link_to "Clear Search", request.path, class:"btn btn-default" %>
</div>

<% end %>