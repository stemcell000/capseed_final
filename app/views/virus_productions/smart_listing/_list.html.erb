<div class="container-fluid">
	  <table class="table table-striped">
	    <thead>
	    <th class="col-lg-1 center">
			<%= smart_listing.sortable "number", :nb %>
	  	</th>
	  	<th class="col-lg-2 center">
			<%= smart_listing.sortable "date of prod.", :date_of_production %>
	  	</th>
	  	<th>
	  		production
	  	</th>
	   <th class="col-lg-5 center">
	    		plasmids
	    </th>
	    	 <th class="col-lg-2 center">
		titer to ATCC (validated)
	  	</th>
	    <th class="col-lg-3 center"></th>
	    </thead>
	    <tbody>
	    	 <% unless smart_listing.empty? %>
		  	<% smart_listing.collection.each do |s| %>
	      		<tr class="editable" data-id = "<%= s.id %>">
	          		<%= smart_listing.render object: s, partial: "virus_productions/smart_listing/vp", locals: {object: s} %>
	        		</tr>
	      	<% end %>
		 <%end%>
	      	<%= smart_listing.item_new colspan: 7, link: new_virus_production_path(:object) %>
	    </tbody>
	  </table>
	  <%= smart_listing.paginate %>
	  <%= smart_listing.pagination_per_page_links %>	
	 </div>
