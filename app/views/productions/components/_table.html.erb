<% if !collection.empty? %>
<table class="table table-bordered" id="plasmid-table">
			<thead>
				<th>Name</th>
				<th>Number</th>
				<th>Type</th>
				<th>Clone</th>
				<th>Actions</th>
			</thead>
				<% collection.each do |plasmid| %>
					<tr>
						<td class="col-sm-3"><%= plasmid.name %></td>
						<td class="col-sm-1 text-center"><%= plasmid.number %></td>
						<td class="col-sm-3"><%= plasmid.type.nil? ? "None" : plasmid.type.name %></td>
						<td class="col-sm-3"><%= plasmid.clone.nil? ? "None" : plasmid.clone.name %></td>
						<td class="col-sm-1 text-center">
							<%= link_to "Remove", 
										remove_from_prod_production_path(@production, @clone_batch, :clone_batch_id =>plasmid.id, :id => plasmid.id),
										:class =>"btn btn-danger btn-xs",
										:title=>"Remove plasmid from list.",
										:confirm => "Do really want to remove this plasmid from this production?",
										:remote => true %>
						</td>
					</tr>
				<% end %>
</table>
<%else%>
			<div class="row"><div class="col-lg-12"> <i class = "glyphicon glyphicon-arrow-right"></i> No plasmid.</div></div>
<% end %>
