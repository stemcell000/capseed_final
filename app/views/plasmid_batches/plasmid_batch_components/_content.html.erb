<% @cb_collection.each do |cb| %>
	<% pbl = cb.plasmid_batches.length %>
	<small>
			<div class="panel panel-default">
				<div class="panel-body">
					<div class="row" >
						<div class="col-lg-3">
							<strong>Plasmid: <span class="text-success"><%= cb.name %></span></strong><br />
						</div>
						<div class="col-lg-6">
							<strong><%= pbl > 1 ?  "Plasmid batches:" : "Plasmid batch:" %></strong><br />
									<% cb.plasmid_batches.order(:id).each_with_index do |b, index|%>
										<a tabindex="0" data-toggle="popover" data-trigger="focus"
											title='
												<div class="row"> 
													<div class="col-sm-4 text-left">
														<%=b.name%>
													</div>
													<div class="col-sm-8 right">
														<%= link_to "Edit", edit_clone_batch_plasmid_batch_path(cb, b, :clone_id => clone.id, :assay_id => @assay.id), :class =>"btn btn-primary btn-xs font80pc", :remote => true %>
														<%= link_to "Remove", [b, :clone_batch_id => cb.id, :clone_id => clone.id, :assay_id => @assay.id], :method => :delete, :class =>"btn btn-danger btn-xs font80pc", :title=>"Remove clone from list.", :remote => true %>
													</div>	
												</div>'
											data-content='
												<div class="col-sm-12 text-left">
													<strong>Created on: </strong><%= b.created_at.strftime("%h %e, %Y ") %><br />
													<strong>Format: </strong><%= b.format.name %><br />
													<strong>Concentration: </strong><%= b.concentration %> <%= Unit.find(b.unit_id).name %><br />
													<% if !b.comment.blank? %>
														<strong>Comments: </strong><br /><%=b.comment%><br />
													<%end%>
													<strong>Contact: </strong><%= b.user.firstname %> <%= b.user.lastname %><br />
													<% if b.plasmid_batch_attachments.length>0 %>
														<strong>Attached files: </strong><br />
															<% b.plasmid_batch_attachments.each do |a|%>
																<%= link_to File.basename(a.attachment.to_s), a.attachment.to_s %><br />
															<%end%>
													<%end%>
												</div>
											'
										>
											<i class="glyphicon glyphicon-star"></i> <%= b.name %>
										</a>	
										<%if pbl-(index+1) > 0 %>,<%end%>		
								<%end%>
						</div><!--End of col-lg-3-->
						<div class="row">
							<div class="col-lg-11 right">
									<%= link_to "Add plasmid batch", new_assay_clone_clone_batch_plasmid_batch_path(:assay_id => @assay.id, :clone_id => clone.id, :clone_batch_id => cb.id), :class =>"btn btn-danger btn-xs", :remote => true %>
							</div><!--End of Btn_col-->
						</div><!--End of row-->
					
					</div><!--End pf row-->
				</div><!--End of panel body-->
			</div><!--End of panel-->
	<% end %>

</small>
