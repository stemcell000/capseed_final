<%= search_form_for @q, :url => clones_path, :class => "form-inline" ,:remote => true do |f| %>
  <small>
  <div class="row">
	  <div class="col-lg-6">
			  	<%= f.label "Search by any terms in name or comment:" %>
			  	<%= f.search_field :name_or_comment_or_assay_comment_or_assay_name_cont, :class=>"col-lg-12" %>
				 <%= f.label "Inserts" %>
				 <%= f.collection_select(:inserts_id_in, Insert.all.order(:id), :id, :name_with_number, {include_blank: ''}, {:class => "select2-select", :multiple => true} )%>
				 <%= f.label "Backbones" %>
				 <%= f.collection_select(:backbones_id_in, Backbone.all.order(:id), :id, :name_with_number, {include_blank: ''}, {:class => "select2-select", :multiple => true} )%>
		</div>
		<div class="col-lg-6">
					<%= f.label "Project" %>
					<%= f.search_field :assay_projects_name_cont, :class=>"col-lg-12" %>
					<%= f.label "Start date " %>
					<%= f.search_field :created_at_gteq, value: @created_at_date_gteq_with_proper_format, 'data-behaviour' => 'datepicker', :class=>"col-lg-12"%>
					<%= f.label "End date "%>
					<%= f.search_field :created_at_lteq, value: @created_at_date_lteq_with_proper_format, 'data-behaviour' => 'datepicker', :class=>"col-lg-12"%>
		</div>
	</div>
  	<div class="row">	
				<div class="form-group pull-right">
					<%= f.submit class:"btn btn-default" %>
					<%= link_to "Clear Search", clones_path, class:"cancel-button btn btn-default" %>
			</div>
		</div>
</small>
<% end %>