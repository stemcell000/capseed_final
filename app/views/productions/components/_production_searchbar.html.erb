 <%= search_form_for @q, :url => display_all_productions_path, :class => "form-inline" ,:remote => true do |f| %>

<div class="row">
	<div class="col-lg-3">
		<div class="form-group">
			<%= f.label "ID" %>
  			<%= f.search_field :id_cont %>
  		</div>
  	</div>
	<div class="col-lg-5">
		<div class="form-group">
			<%= f.label "Comment or name" %>
  			<%= f.search_field :name_or_comment_cont %>
  		</div>
  	</div>
  	</div>
  	<div class="row">
  	<div class="col-lg-3">
  		<div class="form-group">
			<%= f.label 'Step' %>
			<%= f.select(:step_eq, @steps, {:include_blank => " "}, {:class => "select2-select project"}) %>
		</div>
	</div>
	<div class="col-lg-3">
		<div class="form-group">
			<%= f.label 'Project'%>
			<%= f.select(:projects_id_eq, @projects_all,{:include_blank => " "}, {:class => "select2-select project"}) %>
		</div>	
	</div>
</div>
<div class="row">
	<div class="col-lg-12">
		<div class="form-group">
				<div class="form-group">
				  	<%= f.label "Plasmid name or number*", :class=>"control-label" %>
				  	<%= f.search_field :clone_batches_name_or_clone_batches_number_cont%>
			 	</div>
		 </div>
	</div>
</div>

<div class="row">
	<div class="col-lg-4">
		<h5 class="text-primary"><em>Search by ranges of date of creation : </em></h5>
	</div>
	<div class="col-lg-4">
				<div class="form-group" >
					
						<%= f.label "Start date ", :class=>"control-label"  %>
						<%= f.search_field :created_at_gteq, value: @created_at_date_gteq_with_proper_format, 'data-behaviour' => 'datepicker'%>
				</div>
	</div>
	<div class="col-lg-4">
				<div class="form-group" >
						<%= f.label "End date ", :class=>"control-label" %>
						<%= f.search_field :created_at_lteq, value: @created_at_date_lteq_with_proper_format, 'data-behaviour' => 'datepicker'%>
				</div>
	</div>
</div>
<div class="form-group row">
	<span class="help-block"><em>*Enter all or part of the value.</em></span>
</div>

<div class="row">
  <%= f.submit class:"btn btn-default" %>
  <%= link_to "Clear Search", request.path, class:"btn btn-default" %>
</div>

<% end %>