<%= simple_form_for @production, url: add_cbs_production_path, remote: true do |f|  %>
	<%= f.error_notification %>
	<ul class="errors"></ul>
	
  	<!--Attention: la div form-group ui-front est indispensable au fonctionnement du champ autocomplete -->
<div class="form-group ui-front col-lg-12">
	<%= f.input :id , :as => :hidden %>
	
	 <div class="row">
	 	<div class="col-lg-7">
			<%= f.association :clone_batches, :label => "Helpers",:collection => @cb_helpers , input_html: { class: 'select2-select' }, label_method: lambda { |clone_batch| "#{clone_batch.number} | #{clone_batch.name}".html_safe }%>
	 	</div>
	 </div>
	<div class="row">
	 	<div class="col-lg-7">
			<%= f.association :clone_batches, :label => "Transgenes", :collection => @cb_transgenes, input_html: { class: 'select2-select' }, label_method: lambda { |clone_batch| "#{clone_batch.number} | #{clone_batch.name}".html_safe } %>
	 	</div>
	 </div>
	 <div class="row">
	 	<div class="col-lg-7">
			<%= f.association :clone_batches, :label => "Capsids",:collection => @cb_capsids , input_html: { class: 'select2-select' }, label_method: lambda { |clone_batch| "#{clone_batch.number} | #{clone_batch.name}".html_safe }%>
	 	</div>
	 </div>
	 <div class="row">
	 	<div class="col-lg-7">
			<%= f.association :clone_batches, :label => "Libraries",:collection => @cb_libraries , input_html: { class: 'select2-select' }, label_method: lambda { |clone_batch| "#{clone_batch.number} | #{clone_batch.name}".html_safe }%>
	 	</div>
	 </div>
	 
</div>
<div class="row">
	<div class="col-lg-12">
		<div class="btn-group" role="group" aria-label="...">
			<%= f.submit("Save", class: "btn btn-default", title: "Save the changes.") %>
	     	<%= f.submit 'Cancel', :type => :reset, :class => "btn btn-default", "data-dismiss" => "modal", "aria-hidden" => "true" %>
        </div>
  </div>
</div>
<% end %>

